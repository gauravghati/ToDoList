<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gauravghati.EditList">
    <headerText>
        We Could Put Instruction here
    </headerText>
    <content>
        <HBox>
            <ListView fx:id="toDoListView">
            </ListView>
            <GridPane vgap="10" hgap="10">
               <Label text="ShortDescription" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
               <TextField fx:id="shortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
               <Label text= "Details" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
               <TextArea fx:id="detailsArea" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"
                          wrapText="true"/>
               <Label text="Edit DeadLine" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="prevDate" text="previous date" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>
        </HBox>
    </content>
</DialogPane>

